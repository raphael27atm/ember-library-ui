<div class="slide-out-bg"></div>

<div class="slide-out">
  <div class="slide-out-card">
    <LinkTo @route="author.index" @class="btn-back">
      <span class="sr-only">Back</span>
    </LinkTo>

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{@model.last}}, {{@model.first}}</h3>

        <div class="actions">
          <LinkTo @route="author.edit" @model={{model.id}} @class="btn-pop">
            edit
          </LinkTo>
          <button type="submit" class="btn-recessed" {{on "click" (fn this.deleteAuthor @model)}}>delete</button>
        </div>
      </div>
    </div>

    <div class="slide-out-content">
      {{outlet}}
    </div>
  </div>
</div>