<div class="slide-out-bg"></div>

<div class="slide-out">
  <div class="slide-out-card">
    <LinkTo @route="author" @class="btn-back">
      <span class="sr-only">Back</span>
    </LinkTo>

    <div class="slide-out-heading">
      <div class="title">
        <h3>New Author</h3>
      </div>
    </div>

    <div class="slide-out-content">
      <form  {{on "submit" this.saveAuthor}}>
        <div class="field">
          <label>First name:</label>
          <Input type="text" placeholder="Fisrt name" @value={{@model.first}} />
        </div>

        <div class="field">
          <label>Last name:</label>
          <Input type="text" placeholder="Last name" @value={{@model.last}} />
        </div>

        <div class="form-footer">
          <button type="submit" class="btn-submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>